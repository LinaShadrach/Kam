<!DOCTYPE html>

<html>
<head>
    <!-- Materialize- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <!-- JQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <!-- Materialize- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Julius+Sans+One" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper blue-grey">
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="hide-on-med-and-down">
                <li id="navlink">@Html.ActionLink("Their Story", "Index", "About")</li>
                <li id="navlink">@Html.ActionLink("Wedding Plans", "Index", "Plan")</li>
                <li id="brand">@Html.ActionLink("Andrew & Kamarae", "Index", "Home")</li>
                <li id="navlink">@Html.ActionLink("Photos", "Index", "Photo")</li>
                <li id="navlink">@Html.ActionLink("Registry", "Index", "Registry")</li>
                <li id="navlink">@Html.ActionLink("Guestbook", "Index", "Guest")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Dropdown Structure -->
                    <ul id="dropdown1" class="dropdown-content">
                        <li><a asp-controller="About" asp-action="Edit">Story</a></li>
                        <li class="divider"></li>
                        <li><a asp-controller="Plans" asp-action="Edit">Story</a></li>
                        <li class="divider"></li>
                        <li><a asp-controller="Photos" asp-action="Edit">Story</a></li>
                        <li class="divider"></li>
                        <li><a asp-controller="Registry" asp-action="Edit">Story</a></li>
                        <li class="divider"></li>
                        <li><a asp-controller="Guestbook" asp-action="Edit">Story</a></li>
                    </ul>
                    <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Manage<i class="material-icons right">arrow_drop_down</i></a></li>
                }
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li id="brand">@Html.ActionLink("Andrew & Kamarae", "Index", "Home")</li>
                <li id="navlink">@Html.ActionLink("Their Story", "Index", "About")</li>
                <li id="navlink">@Html.ActionLink("Wedding Plans", "Index", "Plan")</li>
                <li id="navlink">@Html.ActionLink("Photos", "Index", "Photo")</li>
                <li id="navlink">@Html.ActionLink("Registry", "Index", "Registry")</li>
                <li id="navlink">@Html.ActionLink("Guestbook", "Index", "Guest")</li>
            </ul>
        </div>
    </nav>
    <div class="render-body">
        @RenderBody()
    </div>
</body>
<script>
    $(document).ready(function () {
        $(".button-collapse").sideNav();
    })
</script>
</html>
